    function driveEmbedUrl(url){
      try{
        const u = new URL(url);
        let id = null;
        const m = u.pathname.match(/\/file\/d\/([^/]+)/);
        if(m) id = m[1];
        if(!id) id = u.searchParams.get('id');
        return id ? `https://drive.google.com/file/d/${id}/preview` : null;
      }catch(e){return null}
    }

    function iconMarkup(group){
      const url = group.icon;
      const emoji = FALLBACK[group.title.replace(/[0-9. ]/g,'').toUpperCase()] || 'üìÅ';
      if(!url) return `<span>${emoji}</span>`;
      return `<img src="${url}" alt="logo" onerror="this.style.display='none'; this.parentElement.textContent='${emoji}'" />`;
    }


    const groupsEl=document.getElementById('groups');
    const detailEl=document.getElementById('detail');
    const backBtn=document.getElementById('backBtn');
    const q=document.getElementById('q');
    const dlg=document.getElementById('dlg');
    const player=document.getElementById('player');

    function isSmall(){ return window.innerWidth < 720 }

    function renderGroups(list){
      groupsEl.innerHTML='';
      list.forEach((g,idx)=>{
        const el=document.createElement('button');
        el.className='card'; el.style.cursor='pointer'; el.style.textAlign='left';
        el.innerHTML=`<div class=\"ic\">${iconMarkup(g)}</div><div><h3>${g.title}</h3><p>${(g.items||[]).length} –∑“Ø–π–ª</p></div>`;
        el.onclick=()=>renderDetail(idx);
        groupsEl.appendChild(el);
      });
    }

    function renderDetail(idx){
      const g=catalog[idx];
      if(!g){ detailEl.innerHTML='<div class=\"empty\">–°–æ–Ω–≥–æ—Å–æ–Ω –±“Ø–ª—ç–≥ –æ–ª–¥—Å–æ–Ω–≥“Ø–π</div>'; return; }
      const box=document.createElement('div'); box.className='grid grid-2 grid-3';
      (g.items||[]).forEach(it=>{
