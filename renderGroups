// ==== –ë—É—Ü–∞—Ö —Ç–æ–≤—á / history ====
const floatBack = document.getElementById('floatBack');

function showBack(show) {
  if (floatBack) floatBack.style.display = show ? 'inline-flex' : 'none';
}

function goBack(e) {
  if (e) e.preventDefault();
  // –ë“Ø–ª–≥“Ø“Ø–¥–∏–π–≥ –±—É—Ü–∞–∞–∂ —Ö–∞—Ä—É—É–ª–∞—Ö
  groupsEl.parentElement.style.display = 'block';
  // –î—ç–ª–≥—ç—Ä—ç–Ω–≥“Ø–π–≥ —Ü—ç–≤—ç—Ä–ª—ç—ç–¥ default –º–µ—Å—Å—ç–∂
  detailEl.innerHTML = '<div class="empty">‚Üë –î—ç—ç—Ä—Ö –∂–∞–≥—Å–∞–∞–ª—Ç–∞–∞—Å –±“Ø–ª—ç–≥ —Å–æ–Ω–≥–æ–Ω–æ —É—É</div>';
  // –ë—É—Ü–∞—Ö —Ç–æ–≤—á–∏–π–≥ –Ω—É—É—Ö
  showBack(false);
  // –î—ç—ç—à –≥“Ø–π–ª–≥—ç—Ö
  window.scrollTo({ top: 0, behavior: 'smooth' });
  // (—Å–æ–Ω–≥–æ–ª—Ç–æ–æ—Ä) history-–≥ —Ü—ç–≤—ç—Ä–ª—ç—ç–¥ ”©–≥—å–µ
  history.replaceState(null, '');
}

// –•”©–≤”©–≥—á —Ç–æ–≤—á –¥—ç—ç—Ä –¥–∞—Ä–≤–∞–ª
floatBack?.addEventListener('click', goBack);

// –£—Ç–∞—Å–Ω—ã browser-–∏–π–Ω "‚Üê" —Ç–æ–≤—á –¥–∞—Ä–≤–∞–ª
window.addEventListener('popstate', goBack);

// Responsive “Ø–µ–¥ desktop-–¥ –±—É—Ü–∞—Ö —Ç–æ–≤—á–∏–π–≥ –Ω—É—É–∂, –±“Ø–ª–≥“Ø“Ø–¥–∏–π–≥ “Ø–∑“Ø“Ø–ª—ç—Ö
window.addEventListener('resize', () => {
  if (!isSmall()) {
    showBack(false);
    backBtn.style.display = 'none';
    groupsEl.parentElement.style.display = 'block';
  }
});

