        card.innerHTML=`<div class=\"ic\">${iconMarkup(g)}</div>
          <div style=\"flex:1\">
            <h3>${it.name}</h3>
            <p class=\"note\">–ó–∞–∞–≤–∞—Ä –±–∞ —Ç–∞—Ç–∞—Ö —Ö–æ–ª–±–æ–æ—Å—É—É–¥</p>
            <div class=\"btns\"></div>
          </div>`;
        const btns=card.querySelector('.btns');
        (it.guides||[]).forEach((u,i)=>{
          const a=document.createElement('a'); a.href='#'; a.className='btn'; a.textContent=`üé• –ó–∞–∞–≤–∞—Ä ${i+1}`;
          a.onclick=(e)=>{ e.preventDefault(); const pv=driveEmbedUrl(u); if(pv){ player.src=pv; dlg.showModal(); } };
          btns.appendChild(a);
        });
        if((it.guides||[]).length===0){ const s=document.createElement('span'); s.className='tag'; s.textContent='üé• –ó–∞–∞–≤–∞—Ä –Ω—ç–º—ç—Ö'; btns.appendChild(s); }
        (it.official||[]).forEach(o=>{ const a=document.createElement('a'); a.href=o.url; a.target='_blank'; a.rel='nofollow noopener'; a.className='btn fill'; a.innerHTML='‚≠≥ '+(o.label||'–¢–∞—Ç–∞—Ö'); btns.appendChild(a); });
        box.appendChild(card);
      });
      detailEl.innerHTML=''; detailEl.appendChild(box);

      if(isSmall()){ groupsEl.parentElement.style.display='none'; backBtn.style.display='inline-flex'; detailEl.scrollIntoView({behavior:'smooth'}); }
      else { backBtn.style.display='none'; groupsEl.parentElement.style.display='block'; }
    }

    backBtn?.addEventListener('click',(e)=>{ e.preventDefault(); groupsEl.parentElement.style.display='block'; backBtn.style.display='none'; detailEl.innerHTML='<div class=\"empty\">‚Üë –î—ç—ç—Ä—Ö –∂–∞–≥—Å–∞–∞–ª—Ç–∞–∞—Å –±“Ø–ª—ç–≥ —Å–æ–Ω–≥–æ–Ω–æ —É—É</div>'; window.scrollTo({top:0,behavior:'smooth'}); });

