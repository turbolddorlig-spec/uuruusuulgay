    // ===== STATIC PASS CONFIG (no demo) =====
    // 1) Generate hash using the separate offline tool (hashgen_offline.html)
    // 2) Put the hash string(s) below and deploy.
    const PASS_SALT = "change-me-2025-01"; // ‚Üê —Å–æ–ª–∏–æ—Ä–æ–π
    const PASSLIST = [
      // –ñ–ò–®–≠–≠–ì“Æ–ô. Offline hash –≥–µ–Ω–µ—Ä–∞—Ç–æ—Ä–∞–∞—Å –≥–∞—Ä—Å–∞–Ω —É—Ç–≥–∞–∞ —ç–Ω–¥ –Ω—ç–º–Ω—ç.
       "398bfe96171d41ce32decd262aa01d01d8278c6cf3f4c056b3dfe15c2345376c" , // —Ç“Ø–≤—à–∏–Ω—Å–∞–π—Ö–∞–Ω

       "389ed1d4224ddc3ca667346d72a8aac398a533ec965e42a4036054f625385e44"
    ];

    async function sha256Hex(text){
      const buf = new TextEncoder().encode(text);
      const digest = await crypto.subtle.digest('SHA-256', buf);
      return Array.from(new Uint8Array(digest)).map(b=>b.toString(16).padStart(2,'0')).join('');
    }
    function allow(){ sessionStorage.setItem('access-ok','1'); document.getElementById('gate').style.display='none'; document.getElementById('app').hidden=false; }
    async function tryLogin(pass){
      if(!PASSLIST.length){ document.getElementById('status').textContent = "–¢“Ø—Ä —Ö–∞–∞–ª—Ç—Ç–∞–π (–∫–æ–¥ —Ç–æ—Ö–∏—Ä—É—É–ª–∞–∞–≥“Ø–π)"; return; }
      const hash = await sha256Hex(PASS_SALT + pass);
      if(PASSLIST.includes(hash)) { allow(); } else { document.getElementById('status').textContent = "–ë—É—Ä—É—É –Ω—É—É—Ü –∫–æ–¥"; }
    }
    if(sessionStorage.getItem('access-ok')==='1'){ allow(); }
    document.getElementById('enter').addEventListener('click', ()=> tryLogin(document.getElementById('pass').value));
    document.getElementById('pass').addEventListener('keydown', (e)=>{ if(e.key==='Enter') tryLogin(e.target.value); });
  </script>

